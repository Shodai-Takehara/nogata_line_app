# ベースは production 用と同じ Ruby バージョンを利用
FROM --platform=linux/amd64 ruby:3.3.0-slim

# 作業ディレクトリの設定
WORKDIR /rails

# OS パッケージのインストール（必要最小限のみ）
RUN apt-get update -qq && \
    apt-get install --no-install-recommends -y \
      build-essential \
      git \
      libsqlite3-dev \
      nodejs \
      npm \
      libyaml-dev \
      pkg-config && \
    rm -rf /var/lib/apt/lists/*

# 正しいバージョンのbundlerをインストール
RUN gem install bundler -v '~> 2.6'

# foreman をグローバルにインストール
RUN gem install foreman

# 開発環境用の環境変数設定
ENV RAILS_ENV="development" \
    BUNDLE_PATH="/usr/local/bundle" \
    PATH="/rails/bin:${PATH}"

# プラットフォーム指定を追加
ENV BUNDLE_FORCE_RUBY_PLATFORM=1

# Gemfile と Gemfile.lock を先にコピーし、依存関係をインストール
COPY Gemfile Gemfile.lock ./
RUN bundle config set --local without 'production' && \
    bundle install

# アプリケーション全体をコピー
COPY . .

# ポート設定
EXPOSE 3001

# コンテナ起動時に Rails サーバを起動するコマンド
CMD ["bin/rails", "server", "-b", "0.0.0.0", "-p", "3001"]
